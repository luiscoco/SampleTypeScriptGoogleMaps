{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": false,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es5",
        "outDir": "wwwroot/js"
    },
    "include": [
        "scripts/**/*"
    ]
}
